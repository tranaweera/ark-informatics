<dbschema type="postgres">

	<!--  Domains description  -->
	<domain iname="PERMISSIONS" ename="up_permission">
		<field iname="strOwner" ename="owner" lname="owner" cname="owner" type="string" length="100" unique="false" required="true" />
		<field iname="intPrincipalType" ename="principal_type" lname="principal type" cname="principal type" type="integer" length="8" unique="false" required="true" />
		<field iname="strPrincipalKey" ename="principal_key" lname="principal key" cname="principal key" type="string" length="100" unique="false" required="true" />
		<field iname="strActivity" ename="activity" lname="Activity" cname="Activity" type="string" length="50" unique="false" required="true" />
		<field iname="strTarget" ename="target" lname="Target" cname="Target" type="string" length="100" unique="false" required="true" />		
                <field iname="strPermissionType" ename="permission_type" lname="Permission Type" cname="Permission Type" type="string" length="50" unique="false" required="true" />	                                
	</domain>
        
        <domain iname="GROUPCHECK" ename="up_group">
		<field iname="intGroupID" ename="group_id" lname="Group ID" cname="Group ID" type="integer" length="8" unique="true" required="true" />
		<field iname="strGroupName" ename="group_name" lname="Group Name" cname="Group Name" type="string" length="100" unique="false" required="true" />
	</domain>
        
        <domain iname="GROUPMEMBERSHIP" ename="up_group_membership">
		<field iname="intGroupID" ename="group_id" lname="Group ID" cname="Group ID" type="integer" length="8" unique="true" required="true" />
		<field iname="strMemberService" ename="member_service" lname="Member Service" cname="Member Service" type="string" length="100" unique="false" required="true" />
                <field iname="strMemberKey" ename="member_key" lname="Member Key" cname="Member Key" type="string" length="100" unique="false" required="true" />
	</domain>
        
        <formfield name="add_permissions">
                <fieldname name="PERMISSIONS_strOwner" />                
                <fieldname name="PERMISSIONS_intPrincipalType" />
                <fieldname name="PERMISSIONS_strPrincipalKey" />
                <fieldname name="PERMISSIONS_strActivity" />
                <fieldname name="PERMISSIONS_strTarget" />
                <fieldname name="PERMISSIONS_strPermissionType" />
        </formfield>
        
        <formfield name="edit_permissions">
            <fieldname name="PERMISSIONS_strOwner" />
            <fieldname name="PERMISSIONS_strPrincipalKey" />
            <fieldname name="PERMISSIONS_strActivity" />
            <fieldname name="PERMISSIONS_strTarget" />
            <fieldname name="PERMISSIONS_strPermissionType" />
        </formfield>
        
        <formfield name="check_group">
            <fieldname name="GROUPCHECK_intGroupID" />
            <fieldname name="GROUPCHECK_strGroupName" />
        </formfield>
        
        <formfield name="group_membership">
            <fieldname name="GROUPMEMBERSHIP_intGroupID" />
            <fieldname name="GROUPMEMBERSHIP_strMemberService" />
            <fieldname name="GROUPMEMBERSHIP_strMemberKey" />
        </formfield>
        
        
</dbschema>
